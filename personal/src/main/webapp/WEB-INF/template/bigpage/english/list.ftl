<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml">
<head><meta http-equiv="Content-Type" content="text/html; charset=utf-8" /><title></title><script type="text/javascript" src="${path.contextPath}/js/jquery-1.8.0.min.js"></script><script type="text/javascript" src="${path.contextPath}/js/public.js"></script><style type="text/css">.left {	width: 200px;	position:absolute;	left:-300px;	top:50px;	border-radius:10px;	background:url('${path.contextPath}/images/div_bg.png');	box-shadow:0 0 30px white inset;}
ul {	width: 100%;	list-style-type: none;	margin:0;	padding:10px;}li{	width:100%;	height:30px;	line-height:30px;	color:white;}
li:hover{	cursor:pointer;	color:red;}
.right {	width: 90%;	Float: right;	padding:50px;	background:url('${path.contextPath}/images/div_bg.png');	box-shadow:0 0 30px white inset;	border-radius:10px;	min-height:450px;	color:white;}
.player{	width:250px;	margin:0 auto;}</style></head><body style="background:url('${path.contextPath}/images/english/bg.jpg')">	<div style="width: 1000px; margin: 0 auto;">		<div id="temp" style="display:none;">			<object id="FlashID" classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" width="240" height="40">				    <param name="movie" class="ieflash" value="" />				    <param name="quality" value="high" />				    <param name="wmode" value="transparent" />				    <param name="swfversion" value="6.0.65.0" />				    <param name="flashvars" value="autoplay=true&showtime=true&autoreplay=true" />				     <!--[if !IE]>-->					    <object type="application/x-shockwave-flash" class="notieflash" data="${path.contextPath}/english_player/player.swf" width="240" height="40">					      <param name="quality" value="high" />					      <param name="wmode" value="transparent" />					      <param name="swfversion" value="6.0.65.0" />					      <param name="flashvars" value="autoplay=true&showtime=true&autoreplay=true" />  					    </object>				     <!--<![endif]-->		  </object>		</div>		<div class="player"></div>		<div class="left">
			<ul>				<#if error??>					<li>${error}</li>				<#else>					<#list list as data>						<li title="${data.title}" onclick="play(${data.id})" id="${data.id}">							<#if data.title?length gt 20>								<#assign title=data.title?substring(0,20)/>							<#else>								<#assign title=data.title/>							</#if>							<span>${title}</span>						</li>					</#list>				</#if>			</ul>		</div>		<div class="right"></div>	</div></body><script type="text/javascript">	$(document).ready(function(){		if(document.documentMode){			if(document.documentMode<9){				$(".right,.left").css("border","3px groove #FFF4C1");			}		}		$(".left,.right").click(function(e){			e.stopPropagation();		});	   	$(document).click(function(){	   		var left=$(".left").position().left;	   		if(left<0){		   		$(".left").animate({left:0},1000);	   		}	   		else{		   		$(".left").animate({left:"-300px"},1000);	   		}	   	});	   	var id=getParameter("id");	   	if(id){		   	play(id);	   	}	   	else{	   		play($("ul li:first").attr("id"));	   	}	});	function play(id){		$("div.player").html("");		$.get("${path.contextPath}/english/getone.do",{id:id},function(reobj){			if(reobj){				$("#temp .ieflash").attr("value","${path.contextPath}/english_player/player.swf?mp3=${path.contextPath}/"+reobj.mp3Url);				$("#temp .notieflash").attr("data","${path.contextPath}/english_player/player.swf?mp3=${path.contextPath}/"+reobj.mp3Url);				$("div.player").html($("#temp").html());			}			$(".right").html(reobj.text);		},"json");	}</script>
</html>
